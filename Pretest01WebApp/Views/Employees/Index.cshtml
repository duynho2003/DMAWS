@model IEnumerable<Pretest01WebApp.Models.TblEmp>
@{
    ViewBag.Title = "Index";
}
<p>
    <a asp-action="Create">Create New</a>
</p>

<h2>List of Employees</h2>
@*Search*@
<form asp-action="Index">
    <label>Search Employee</label>
    <input type="text" name="fid" placeholder="Enter id..." />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Salary</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmpId</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Salary</td>
            <td>
                @Html.ActionLink("Update", "Update", new { id=item.EmpId }) |
                @Html.ActionLink("Details", "Details", new { id=item.EmpId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EmpId })
            </td>
        </tr>
    }
</table>